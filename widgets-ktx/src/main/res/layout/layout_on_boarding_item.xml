<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animationView"
        android:layout_width="match_parent"
        android:layout_height="256dp"
        app:lottie_autoPlay="true"
        app:lottie_loop="true" />

    <TextView
        android:id="@+id/alertTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingStart="@dimen/widgets_ktx_horizontal_margin"
        android:paddingTop="@dimen/widgets_ktx_horizontal_margin"
        android:paddingEnd="@dimen/widgets_ktx_horizontal_margin"
        android:textAppearance="?android:attr/textAppearance"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/alertMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/widgets_ktx_horizontal_margin"
        android:gravity="center"
        android:paddingStart="@dimen/widgets_ktx_horizontal_margin"
        android:paddingEnd="@dimen/widgets_ktx_horizontal_margin"
        android:paddingBottom="@dimen/widgets_ktx_horizontal_margin"/>
</LinearLayout>