<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="KeyValueView">
        <!-- Text property for key and value -->
        <attr name="keyText" format="string" localization="suggested" />
        <attr name="valueText" format="string" localization="suggested" />

        <!-- Text size property for key and value -->
        <attr name="keySize" format="dimension" />
        <attr name="valueSize" format="dimension" />

        <!-- Enabled property for key and value -->
        <attr name="keyEnabled" format="boolean" />
        <attr name="valueEnabled" format="boolean" />

        <!-- Style property for key and value -->
        <attr name="keyStyle">
            <flag name="normal" value="0" />
            <flag name="bold" value="1" />
            <flag name="italic" value="2" />
        </attr>
        <attr name="valueStyle">
            <flag name="normal" value="0" />
            <flag name="bold" value="1" />
            <flag name="italic" value="2" />
        </attr>

        <!-- Absolute spacing property for key and value -->
        <attr name="absoluteSpacing" format="dimension" />
        <attr name="absoluteSpacingTop" format="dimension" />
        <attr name="absoluteSpacingBottom" format="dimension" />

        <!-- Relative spacing property for key and value -->
        <attr name="relativeSpacing" format="dimension" />
        <attr name="relativeSpacingTop" format="dimension" />
        <attr name="relativeSpacingBottom" format="dimension" />

        <!-- Text color property for key and value -->
        <attr name="keyTextColor" format="color" />
        <attr name="valueTextColor" format="color" />

        <!-- Background color property for key and value -->
        <attr name="keyBackgroundColor" format="color" />
        <attr name="valueBackgroundColor" format="color" />

        <!-- Appearance for each text view -->
        <attr name="keyAppearance" format="reference" />
        <attr name="valueAppearance" format="reference" />

        <!-- Method property for value -->
        <!-- This method will be executed and result will be displayed as value -->
        <!-- The method needs to return String -->
        <attr name="methodForValue" format="reference" />
    </declare-styleable>

    <declare-styleable name="PlaceholderView">
        <!-- Text property for title and desc -->
        <attr name="titleText" format="string" localization="suggested" />
        <attr name="descriptionText" format="string" localization="suggested" />

        <!-- Animation properties -->
        <attr name="animation" format="reference"/>
        <attr name="animationHeight" format="dimension"/>
        <attr name="animationWidth" format="dimension" />
        <attr name="animationLooped" format="boolean" />
        <attr name="animationScaleType">
            <flag name="center" value="0" />
            <flag name="centerCrop" value="1" />
            <flag name="centerInside" value="2" />
            <flag name="fitCenter" value="3" />
            <flag name="fitEnd" value="4" />
            <flag name="fitStart" value="5" />
            <flag name="fitXY" value="6" />
            <flag name="matrix" value="7" />
        </attr>

        <attr name="titleSize" format="dimension" />
        <attr name="descriptionSize" format="dimension" />

        <!-- Style property for title and desc -->
        <attr name="titleStyle">
            <flag name="normal" value="0" />
            <flag name="bold" value="1" />
            <flag name="italic" value="2" />
        </attr>

        <attr name="descriptionStyle">
            <flag name="normal" value="0" />
            <flag name="bold" value="1" />
            <flag name="italic" value="2" />
        </attr>
    </declare-styleable>
</resources>